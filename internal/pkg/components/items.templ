package components

import (
	"github.com/bradydean/go-website/internal/pkg/profile"
)

type Item struct {
	ItemID     int64
	Content    string
	IsComplete bool
}

templ Items(profile profile.Profile, title, description string, items []Item) {
	@Navbar(&profile)
	<main>
		<div class="flex justify-center">
			<ul class="menu bg-base-200 w-56 rounded-box text-xl">
				<li class="menu-title">{ title }</li>
				if len(description) != 0 {
					<li class="menu-title">{ description }</li>
				}
				for _, list := range items {
					<li>
						<div class="flex">
							<p>{ list.Content }</p>
							<input
								type="checkbox"
								class="checkbox"
								if list.IsComplete {
									checked
								}
							/>
						</div>
					</li>
				}
			</ul>
		</div>
	</main>
}
